<Window x:Class="Laboratory.edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory"
        mc:Ignorable="d"
        Title="edit" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Имя" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 20 0 0"/>
        <TextBox x:Name="tbname" Width="100" VerticalAlignment="top" HorizontalAlignment="Left" Margin="100 20 0 0" Text="{Binding name}"/>
        <TextBlock Text="Гендер" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 50 0 0"/>
        <ComboBox Name="CbGender" DisplayMemberPath="name" SelectedItem="{Binding gender1}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100 50 0 0" Width="100"/>
        <Button x:Name="btnsave" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10" Click="Save"/>
    </Grid>
</Window>
